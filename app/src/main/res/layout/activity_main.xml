<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mcsign"
    tools:context="net.magnusfrater.haveyouheard.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:text="Have you heard about the McDonald's's app?"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/bYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="82dp"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:text="Yes" />

        <Button
            android:id="@+id/bNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/bYes"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:text="No" />

        <TextView
            android:id="@+id/tvHeard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/tvHeard"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvQuestion"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvLies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="@string/tvLies"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvHeard"
            android:layout_toLeftOf="@+id/bNo"
            android:layout_toStartOf="@+id/bNo"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvNotHeard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tvNotHeard"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvLies"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
